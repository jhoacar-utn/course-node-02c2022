{
  "name": "fullstack-project",
  "version": "1.0.0",
  "description": "This is a project using typescript",
  "scripts": {
    "postinstall": "concurrently npm:install:*",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "dev": "concurrently npm:dev:*",

    "dev:server": "env-cmd -f server.env npm run dev-server",
    "dev-server": "npm run build:client && cd server && npm run dev",
    
    "dev:client": "env-cmd -f client.env npm run dev-client",
    "dev-client": "cd client && npm run dev",

    "start": "env-cmd -f server.env npm run start-server",
    "start-server": "concurrently npm:build:* && cd server && npm start",

    "build:server": "cd server && npm run build",

    "build:client": "env-cmd -f client.env npm run build-client",
    "build-client": "cd client && npm run build",

    "lint": "eslint --fix ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.4.0",
    "env-cmd": "^10.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0"
  }
}
